body,
html {
    font: 16px/1.4 Georgia, serif;
}

@media only screen and (max-width: 500px) {
    body,
    html {
        font-size: 12px;
    }
}

.page {
    max-width: 400px;
    padding: 2rem;
    margin: 0 auto;
    text-align: center;
    user-select: none;

    &.shuffling {
        pointer-events: none;
    }
}

h1 {
    font: 2rem/1.2 Georgia, serif;
    margin-bottom: 1em;
}

.fifteen {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    margin-bottom: 1.5rem;
    background: #e5d6f6;

    .item {
        position: absolute;
        left: 0;
        top: 0;
        width: 25%;
        height: 25%;
        margin: 0;
        padding: 0;
        border: none;
        outline: none;
        background: #09ac11;
        color: #fff;
        font-size: 2rem;
        cursor: pointer;
        box-shadow: inset 1px 1px #e5d6f6
        transition: transform .2s, filter .5s;

        &:hover {
            opacity: .7;
        }

        &Val {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 84%;
            height: 84%;
            margin: 8%;
            box-shadow: inset 0 0 0 2px #922ec5;
        }
    }

    &Win {
        .item {
            filter: brightness(150%)
        }
    }
}

.btn {
    color: #fff;
    background: #1f8ad0;
    font: 1.2rem/1.4 Georgia, serif;
    border: none;
    cursor: pointer;
    padding: .5em 1.5em;
    width: 100%;

    &:hover {
        opacity: .7;
    }
}
